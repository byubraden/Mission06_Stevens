@{
    ViewData["Title"] = "Add Movies";
}

@model movie

<!DOCTYPE html>

<html>
<head>
    <title>Add a Movie</title>
</head>
<body>

<form method="post" class="card p-4 shadow">
    <h2 class="mb-3">Add a Movie</h2>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category (Required):</label>
        <input type="text" asp-for="Category" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title (Required):</label>
        <input type="text" asp-for="Title" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year (Required):</label>
        <input type="number" asp-for="Year" class="form-control" required min="1880" max="2099" step="1">
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director (Required):</label>
        <input type="text" asp-for="Director" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating (Required):</label>
        <select asp-for="Rating" class="form-select" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited:</label>
        <select asp-for="Edited" class="form-select">
            <option value="" selected>-- Select an option --</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent To:</label>
        <input asp-for="LentTo"  class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes (Max 25 characters):</label>
        <input type="text" asp-for="Notes" class="form-control" maxlength="25">
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>